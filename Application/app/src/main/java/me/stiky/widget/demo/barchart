GridGround gridGround = new GridGround(mCharView);
        gridGround.setLineColor(Color.RED);
        gridGround.setSubLineColor(Color.RED);
        gridGround.setLineWidth(5);
        gridGround.setSubLineWidth(2);
        gridGround.setXNum(15);
        gridGround.setSubXNum(5);
        gridGround.setYNum(10);
        gridGround.setSubYNum(5);
        mCharView.setBackground(gridGround);

